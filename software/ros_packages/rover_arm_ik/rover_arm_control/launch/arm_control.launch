<!--launches ros_control specific files-->

<launch>

    <!--find urdf and publish it to param server-->
    <include file="$(find rover_arm_description)/launch/arm_upload.launch"/>

    <!--bringup hardware interface-->
    <node name="arm_hw_interface" pkg="rover_arm_control" type="arm_hw_interface_node" output="screen" />

    <!--brings up joint state cotroller-->
    <rosparam file="$(find rover_arm_control)/config/joint_state_controller.yaml" command = "load" />
    <node name="joint_state_controller" pkg="controller_manager" type="controller_manager" args="spawn joint_state_controller" respawn="false" output="screen" />

    <!--brings up joint traj controller-->
    <rosparam file="$(find rover_arm_control)/config/arm_controller.yaml" command = "load" />
    <node name="arm_controller" pkg="controller_manager" type="controller_manager" args="spawn arm_controller" respawn="false" output="screen"/>

    <!---brings up position controller for group of joints-->
    <node name="joint_group_pos" pkg="controller_manager" type="controller_manager" args="load joint_group_position_controller" respawn ="false" output="screen" />

    <!-- Convert joint states to /tf tranforms -->
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />

</launch>
